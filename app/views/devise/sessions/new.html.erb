      <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      
        <%= f.email_field :email, label: "Correo electronico", autofocus: true %>
          
        <%= f.password_field :password, label: "ContraseÃ±a", autocomplete: "off" %>
        
        <% if devise_mapping.rememberable? -%>
